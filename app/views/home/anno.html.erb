<% if session[:locale] == "en" %>
  <% title( @anno.title_en ) %>
<% elsif session[:locale] == "zh-TW" %>
  <% title( @anno.title    ) %>
<% end %>

<%= content_for  :css do %>

    <link rel="stylesheet" href="css/product-in.css">
<% end  %>





<%=render '/home/comm/top'%>



<div class="mainArea">
    <div class="container">
        <div class="titleBox">
            <h2 class="title">
                <% if session[:locale] == "en" %>
                  <%=   @anno.title_en%>
                <% elsif session[:locale] == "zh-TW" %>
                  <%=   @anno.title%>
                <% end %>
            </h2>
        </div>
        <div class="row">

            <div class="col-lg-9">
                <!-- Content -->
                <section id="content">

                    <% if session[:locale] == "en" %>
                      <%= raw @anno.content_en%>
                    <% elsif session[:locale] == "zh-TW" %>
                      <%= raw @anno.content%>
                    <% end %>

                </section>
            </div>

            <!-- 次選單 -->
            <div class="col-lg-3 nopadding ">
                <!-- Sidebar -->
                <% Announce.all.each do |ann|%>
                <a href="/anno?id=<%=ann.id%>">
                    <section id="sidebar">
                        <div class="Img">
                            <%= image_tag ann.img.url,{:style =>"width:100%"}  if !ann.img.nil? %>

                        </div>
                        <div class="Txt">

                            <h4>
                                <% if session[:locale] == "en" %>
                                  <%=   ann.title_en%>
                                <% elsif session[:locale] == "zh-TW" %>
                                  <%=   ann.title%>
                                <% end %>
                            </h4>

                        </div>
                    </section>
                </a>
                <% end %>
            </div>
            <!-- 次選單 end -->

        </div>
    </div>
</div>

<style>
div.row{
    display: -webkit-flex; /* Safari */
    -webkit-flex-direction: row-reverse; /* Safari 6.1+ */
    display: flex;
    flex-direction: row-reverse;
}
</style>
