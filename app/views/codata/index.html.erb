<% if @notice %>
  <p> <%= @notice %></p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Tel</th>
      <th>Fax</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codata.each do |codatum| %>
      <tr>
        <td><%= codatum.tel %></td>
        <td><%= codatum.fax %></td>
        <td><%= codatum.email %></td>
        <td><%= link_to 'Show', codatum %></td>
        <td><%= link_to 'Edit', edit_codatum_path(codatum) %></td>
        <td><%= link_to 'Destroy', codatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Codatum', new_codatum_path %>
